<section id="home">
    <div class="content">
        <h1>
            <span class="greeting">Welcomenemane to</span>
            <span class="name">Jesse's Hub</span>
        </h1>
        <div class="description">
            <p class="typewriter">Full-Stack Software Developer</p>
        </div>
        <a href="#projects" class="scroll-down">
            <span>View my work</span>
            <div class="arrow"></div>
        </a>
    </div>
</section>

<style>
    #home {
        background-color: #111;
        background: linear-gradient(45deg, #111 0%, #1a1a1a 100%);
        height: 100vh;
        scroll-snap-align: start;
        position: relative;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: white;
        padding: 2rem;
    }

    h1 {
        font-size: 4rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
    }

    h1 span {
        display: block;
    }

    .greeting {
        font-size: 2rem;
        color: #64ffda;
        margin-bottom: 1rem;
        opacity: 0;
        animation: fadeIn 0.5s ease-in forwards;
    }

    .name {
        background: linear-gradient(120deg, #64ffda, #00bfff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        opacity: 0;
        animation: fadeIn 0.5s ease-in forwards 0.5s;
    }

    .description {
        text-align: center;
        margin-bottom: 3rem;
    }

    .typewriter {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        border-right: 2px solid #64ffda;
        white-space: nowrap;
        overflow: hidden;
        animation: typing 3.5s steps(40, end), blink-caret 0.75s step-end infinite;
    }

    .fade-in {
        font-size: 1.2rem;
        color: #a8b2d1;
        opacity: 0;
        animation: fadeIn 1s ease-in forwards 3.5s;
    }

    .scroll-down {
        position: absolute;
        bottom: 2rem;
        color: white;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        animation: bounce 2s infinite;
        transition: color 0.3s ease;
    }

    .scroll-down:hover {
        color: #64ffda;
    }

    .arrow {
        width: 20px;
        height: 20px;
        border-right: 2px solid currentColor;
        border-bottom: 2px solid currentColor;
        transform: rotate(45deg);
    }

    @keyframes typing {
        from { width: 0 }
        to { width: 100% }
    }

    @keyframes blink-caret {
        from, to { border-color: transparent }
        50% { border-color: #64ffda }
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-10px); }
        60% { transform: translateY(-5px); }
    }
</style>